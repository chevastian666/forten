# Application Configuration
APP_NAME=monitoring-service
APP_VERSION=1.0.0
PORT=3000
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monitoring_db
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# HikCentral Configuration
HIK_CENTRAL_BASE_URL=https://your-hikcentral-server.com
HIK_CENTRAL_USERNAME=admin
HIK_CENTRAL_PASSWORD=your-hikcentral-password
HIK_CENTRAL_TIMEOUT=30000

# Q-Box Configuration
QBOX_BASE_URL=https://your-qbox-server.com
QBOX_API_KEY=your-qbox-api-key
QBOX_TIMEOUT=30000

# Streaming Configuration
STREAM_DIR=/tmp/streams
STREAM_BASE_URL=http://localhost:3000
MAX_STREAMS=50
STREAM_INACTIVE_TIMEOUT=30

# WebSocket Configuration
WS_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# Email Notification Configuration
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# SMS Notification Configuration
SMS_SERVICE=twilio
SMS_API_KEY=your-twilio-api-key
SMS_FROM=+1234567890

# Push Notification Configuration
PUSH_SERVICE=firebase
PUSH_API_KEY=your-firebase-api-key
PUSH_APP_ID=your-firebase-app-id

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
CAMERA_OFFLINE_THRESHOLD=5
DEVICE_OFFLINE_THRESHOLD=10
ALERT_RETRY_INTERVAL=300000
EVENT_CLEANUP_DAYS=90
ALERT_CLEANUP_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/monitoring-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5