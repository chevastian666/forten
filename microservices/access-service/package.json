{
  "name": "@forten-crm/access-service",
  "version": "1.0.0",
  "description": "Access control and management service for Forten CRM",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migration:create": "knex migrate:make",
    "migration:run": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback"
  },
  "keywords": ["access-control", "pin-generation", "visitor-management"],
  "author": "Forten CRM Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.2",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "redis": "^4.6.8",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2",
    "winston": "^3.10.0",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "node-cron": "^3.0.2",
    "mqtt": "^5.0.3",
    "amqplib": "^0.10.3",
    "crypto-random-string": "^5.0.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/jest": "^29.5.4",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.3",
    "@types/amqplib": "^0.10.1",
    "@types/speakeasy": "^2.0.7",
    "@types/qrcode": "^1.5.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "ts-node ./src/index.ts"
  }
}