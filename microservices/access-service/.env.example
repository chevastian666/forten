# Server Configuration
NODE_ENV=development
PORT=3003
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=forten_access

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=forten.events

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Q-Box Integration
QBOX_API_URL=https://api.qbox.example.com
QBOX_API_KEY=your-qbox-api-key
QBOX_API_SECRET=your-qbox-api-secret

# Notification Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@forten-crm.com

SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 for Photo Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=forten-access-photos

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PIN Generation
PIN_LENGTH=6
PIN_VALIDITY_HOURS=24
TEMP_PIN_VALIDITY_HOURS=8

# Access Control Settings
MAX_FAILED_ATTEMPTS=3
FAILED_ATTEMPT_WINDOW_MINUTES=5
ANTI_PASSBACK_MINUTES=5

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Feature Flags
ENABLE_FACIAL_RECOGNITION=false
ENABLE_BIOMETRIC_ACCESS=false
ENABLE_MOBILE_ACCESS=true
ENABLE_EMERGENCY_PROTOCOLS=true